{
    "name": "gocardless/enterprise",
    "type": "library",
    "description": "A php library for interfacing with the GoCardless Enterprise REST API. Please note this library is not for use with their standard API.",
    "keywords": ["GoCardless", "Direct Debit", "Lendable"],
    "homepage": "https://www.lendable.co.uk",
    "license": "MIT",

    "authors": [
        {
            "name": "Paul Pamment",
            "email": "paul@lendable.co.uk",
            "homepage": "https://www.lendable.co.uk"
        }
    ],

    "require": {
        "php": ">=5.4",
        "guzzlehttp/guzzle": "~5.3"
    },

    "autoload": {
        "psr-0": {
            "GoCardless": ""
        }
    },

    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "jakub-onderka/php-parallel-lint": "~0.9",
        "friendsofphp/php-cs-fixer": "^2.10"
    },

    "scripts": {
        "validate-files": [
            "vendor/bin/parallel-lint --exclude vendor ."
        ],
        "code-style": [
            "vendor/bin/php-cs-fixer fix --config='./.php_cs' --show-progress=none --dry-run --no-interaction -v"
        ]
    }
}
