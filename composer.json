{
    "name": "gocardless/enterprise",
    "type": "library",
    "description": "A php library for interfacing with the GoCardless Pro (formerly GoCardless Enterprise) REST API. Please note this library is not for use with their standard API.",
    "keywords": ["GoCardless", "GoCardless Enterprise", "GoCardless Pro", "Direct Debit", "Lendable"],
    "homepage": "https://www.lendable.co.uk",
    "license": "MIT",

    "authors": [
        {
            "name": "Lendable Ltd",
            "email": "dev@lendable.co.uk",
            "homepage": "https://www.lendable.co.uk"
        }
    ],

    "autoload": {
        "psr-4": {
            "Lendable\\GoCardlessEnterprise\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lendable\\GoCardlessEnterprise\\Tests\\": "tests/"
        }
    },

    "require": {
        "php": "^7.4||^8.0",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.2",
        "php-coveralls/php-coveralls": "^2.5",
        "phpstan/phpstan": "^1.1",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^8.3",
        "symfony/phpunit-bridge": "^4.4||^5.3||^6.0"
    },

    "scripts": {
        "check-code-style": [
            "php-cs-fixer fix --config='./ci/php-cs-fixer/config.php' --show-progress=none --dry-run --no-interaction --diff -v"
        ],
        "check-security": [
            "bin/local-php-security-checker"
        ],
        "fix-code-style": [
            "php-cs-fixer fix --config='./ci/php-cs-fixer/config.php' --show-progress=none --no-interaction --diff -v"
        ],
        "run-static-analysis": [
            "phpstan analyse --configuration='./ci/phpstan/config.neon'"
        ],
        "run-tests": [
            "phpunit --configuration='./ci/phpunit/config.xml' tests/Unit/"
        ],
        "run-integration-tests": [
            "phpunit --configuration='./ci/phpunit/config.xml' tests/Integration/"
        ],
        "run-tests-with-clover": [
            "phpunit --configuration='./ci/phpunit/config.xml' --coverage-clover='./build/logs/clover.xml' tests/Unit/"
        ]
    },

    "config": {
        "bin-dir": "bin",
        "sort-packages": true
    },
    "prefer-stable": true
}
